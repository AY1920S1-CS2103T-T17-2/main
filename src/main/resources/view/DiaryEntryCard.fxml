<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" prefHeight="158.0" prefWidth="485.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <VBox alignment="CENTER" prefHeight="92.0" prefWidth="88.0" stylesheets="@Diary.css">
      <children>
         <Label fx:id="id" alignment="CENTER" contentDisplay="CENTER" prefHeight="129.0" prefWidth="88.0" styleClass="cell_small_label" stylesheets="@Diary.css" text="\\$id">
            <minWidth>
               <!-- Ensures that the label text is never truncated -->
               <Region fx:constant="USE_PREF_SIZE" />
            </minWidth>
         </Label>
      </children>
      <opaqueInsets>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </opaqueInsets>
   </VBox>
   <VBox prefHeight="107.0" prefWidth="322.0">
      <children>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label fx:id="title" prefHeight="54.0" prefWidth="288.0" styleClass="cell_big_label" text="\$title">
                  <padding>
                     <Insets bottom="3.0" left="3.0" right="3.0" top="5.0" />
                  </padding></Label>
            </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label fx:id="date" prefHeight="40.0" prefWidth="299.0" styleClass="cell_small_label" text="\$date">
                  <padding>
                     <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                  </padding></Label>
            </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label fx:id="place" prefHeight="40.0" prefWidth="295.0" styleClass="cell_small_label" text="\$place">
                  <padding>
                     <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                  </padding></Label>
            </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label fx:id="memory" prefHeight="54.0" prefWidth="288.0" styleClass="cell_small_label" text="\\$memory">
                  <padding>
                     <Insets bottom="5.0" left="3.0" right="3.0" top="3.0" />
                  </padding></Label>
            </children>
         </HBox>
      </children>
   </VBox>
   <VBox prefHeight="200.0" prefWidth="100.0">
      <children>
         <ImageView fitHeight="157.0" fitWidth="157.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../images/travelDiary.png" />
            </image>
         </ImageView>
      </children>
   </VBox>
</HBox>
